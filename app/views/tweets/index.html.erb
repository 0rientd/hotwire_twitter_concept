<div class="w-full mt-8">
  <div class="flex justify-center items-center">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% if alert.present? %>
      <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
    <% end %>
  </div>

  <h1 class="font-bold text-4xl">Tweets</h1>

  <%= render "form_to_index", tweet: @tweet %>

  <div id="tweets" class="min-w-full divide-y-2 space-y-4 border-4 border-gray-100 rounded-lg p-2 mt-24">
    <% @tweets.reverse.each do |tweet| %>
      <div class="flex flex-col space-y-4 space-gray-300 p-4">
        <div class="mt-4">
          <%= tweet.body %>
        </div>

        <div class="inline">
          Likes: <%= tweet.likes %>
          Retweets: <%= tweet.retweets %>
        </div>
      </div>
    <% end %>
  </div>
</div>
